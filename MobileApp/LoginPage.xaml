<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MobileApp.LoginPage"
    Title="Log In">
    <ContentPage.Content>
        <StackLayout Padding="12, 12, 12, 12" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
            <Label x:Name="Label1" Text="Checker Your Place" TextColor="#5c6bc0" HorizontalTextAlignment="Center" FontSize="36"/>
            <Entry x:Name="loginEntry" Placeholder="Email" WidthRequest="300" HorizontalOptions="Center" Margin="20, 20" />
            <Entry x:Name="passwordEntry" Placeholder="Password" WidthRequest="300" HorizontalOptions="Center" Margin="20, 20" />
            <Button Text="Log in" FontAttributes="Bold" WidthRequest="300" HorizontalOptions="Center" Margin="20, 20"  ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

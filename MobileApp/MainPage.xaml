<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.MainPage"
             Title="Welcome to Check Your Place">

    <ContentPage.Content>
        <StackLayout Padding="12, 12, 12, 12" VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand">
        <Button x:Name="loginButton" Text="Log in" BackgroundColor="#7986cb" TextColor="WhiteSmoke" FontSize="20" HorizontalOptions="FillAndExpand" Margin="20, 20" VerticalOptions="End" Clicked="LoginClicked" CornerRadius="10" ></Button>
        <Button x:Name="registerButton" Text="Register" BackgroundColor="#7986cb" TextColor="WhiteSmoke" FontSize="20" HorizontalOptions="FillAndExpand" Margin="20, 20" VerticalOptions="End" Clicked="RegisterClicked" CornerRadius="10" ></Button>

    </StackLayout>
    </ContentPage.Content>
</ContentPage>

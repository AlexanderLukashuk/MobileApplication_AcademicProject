<?xml version="1.0" encoding="UTF-8" ?>
<TabbedPage BackgroundColor="#283593"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MobileApp.NewMainPage">

    <ContentPage Title="Home" IconImageSource="outline_home_black_24dp.png">
        <ContentPage.Content>
            <ScrollView>
                <StackLayout Padding="12, 12, 12, 12" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                    <Grid x:Name="restaurans" ColumnSpacing="40">
                       <Grid Grid.Row="0" Grid.Column="0" BackgroundColor="Black">
                            <Image HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="AspectFill" Source="CheChilPub.jpeg" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                            <Label Text="Chechil Pub" FontSize="28" FontAttributes="Bold" TextColor="#7986cb" />
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="1" BackgroundColor="Black">
                            <Image Source="../Resources/Saksaul.jpeg"/>
                            <Label Text="Саксаул" FontSize="28" FontAttributes="Bold" TextColor="#7986cb" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="0" BackgroundColor="Black">
                            <Image Source="../Resources/OceanBasket.jpg"/>
                            <Label Text="Ocean Basket" FontSize="28" FontAttributes="Bold" TextColor="#7986cb" />
                        </Grid>
                    </Grid>
                    <!--<Image HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="AspectFill" Source="CheChilPub.jpeg" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                    <Label Text="Chechil Pub" FontSize="28" FontAttributes="Bold" TextColor="#7986cb" />
                    <Image Source="Saksaul.jpeg"/>
                    <Label Text="Саксаул" FontSize="28" FontAttributes="Bold" TextColor="#7986cb" />
                    <Image Source="OceanBasket.jpg"/>
                    <Label Text="Ocean Basket" FontSize="28" FontAttributes="Bold" TextColor="#7986cb" />-->
                    <Label Text="" FontSize="50" FontAttributes="Bold" />
                </StackLayout>
            </ScrollView>
        </ContentPage.Content>
    </ContentPage>

    <ContentPage Title="Search" IconImageSource="outline_search_black_24dp.png">
        <ContentPage.Content>
            <StackLayout Padding="12, 12, 12, 12" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                <Label Text="" FontSize="50" FontAttributes="Bold" />
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>

    <ContentPage Title="Account" IconImageSource="outline_account_circle_black_24dp.png">
        <ContentPage.Content>
            <StackLayout Padding="12, 12, 12, 12" VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
                <Label x:Name="nameLabel" Text="Name: " FontSize="28" FontAttributes="Bold" TextColor="#7986cb" />
                <Label x:Name="emailLabel" Text="Email: " FontSize="28" FontAttributes="Bold" TextColor="#7986cb" />
                <Label x:Name="phoneLabel" Text="Phone: " FontSize="28" FontAttributes="Bold" TextColor="#7986cb" />
                <Label x:Name="cityLabel" Text="City: " FontSize="28" FontAttributes="Bold" TextColor="#7986cb" />
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>

    <ContentPage Title="Settings" IconImageSource="outline_settings_black_24dp.png">
        <ContentPage.Content>
            <StackLayout Padding="12, 12, 12, 12" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                <Button x:Name="changeName" Text="Change Name" BackgroundColor="#7986cb" TextColor="#1a237e" FontSize="28" FontAttributes="Bold" />
                <Button x:Name="changeEmail" Text="Change Email" BackgroundColor="#7986cb" TextColor="#1a237e" FontSize="28" FontAttributes="Bold" />
                <Button x:Name="changePhone" Text="Change Phone number" BackgroundColor="#7986cb" TextColor="#1a237e" FontSize="28" FontAttributes="Bold"  />
                <Button x:Name="changePassword" Text="Change Password" BackgroundColor="#7986cb" TextColor="#1a237e" FontSize="28" FontAttributes="Bold" />
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>

</TabbedPage>

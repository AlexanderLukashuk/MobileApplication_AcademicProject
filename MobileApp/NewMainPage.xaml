<?xml version="1.0" encoding="UTF-8" ?>
<TabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MobileApp.NewMainPage">

    <ContentPage Title="Home" IconImageSource="outline_home_black_24dp.png">
        <ContentPage.Content>
            <ScrollView>
                <StackLayout Padding="12, 12, 12, 12" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                    <Grid ColumnSpacing="40">

                    </Grid>
                    <Label Text="" FontSize="50" FontAttributes="Bold" />
                </StackLayout>
            </ScrollView>
        </ContentPage.Content>
    </ContentPage>

    <ContentPage Title="Search" IconImageSource="outline_search_black_24dp.png">
        <ContentPage.Content>
            <StackLayout Padding="12, 12, 12, 12" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                <Label Text="" FontSize="50" FontAttributes="Bold" />
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>

    <ContentPage Title="Account" IconImageSource="outline_account_circle_black_24dp.png">
        <ContentPage.Content>
            <StackLayout Padding="12, 12, 12, 12" VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
                <Label x:Name="nameLabel" Text="Name: " FontSize="28" FontAttributes="Bold" TextColor="#aa00ff" />
                <Label x:Name="emailLabel" Text="Email: " FontSize="28" FontAttributes="Bold" TextColor="#aa00ff" />
                <Label x:Name="phoneLabel" Text="Phone: " FontSize="28" FontAttributes="Bold" TextColor="#aa00ff" />
                <Label x:Name="cityLabel" Text="City: " FontSize="28" FontAttributes="Bold" TextColor="#aa00ff" />
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>

    <ContentPage Title="Settings" IconImageSource="outline_settings_black_24dp.png">
        <ContentPage.Content>
            <StackLayout Padding="12, 12, 12, 12" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                <Button x:Name="changeName" Text="Change Name" BackgroundColor="#aa00ff" FontSize="28" FontAttributes="Bold" />
                <Button x:Name="changeEmail" Text="Change Email" BackgroundColor="#aa00ff" FontSize="28" FontAttributes="Bold" />
                <Button x:Name="changePhone" Text="Change Phone number" BackgroundColor="#aa00ff" FontSize="28" FontAttributes="Bold"  />
                <Button x:Name="changePassword" Text="Change Password" BackgroundColor="#aa00ff" FontSize="28" FontAttributes="Bold" />
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>

</TabbedPage>
